@model IEnumerable<SpeakOutWeb.Models.UserAudio>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            STT
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreateDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LinkAudio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TextAudio)
        </th>
        <th></th>
    </tr>
    @{
        int count = 1;
        foreach (var item in Model)
        {
            <tr>
                <td>@count</td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreateDate)
                </td>
                <td>
                    <audio controls src="@Url.Action("LoadAudio", new { id = item.Id })" ) />
                </td>
                <td>
                    <script>
                    document.write(unescape("@item.TextAudio"));
                    </script>
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
          
            </tr>
            count++;
        }
    }
</table>