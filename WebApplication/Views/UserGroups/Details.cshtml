                        </td>
                        <td>
                            @item.StudentEmail
                        </td>
                        <td>
                            @item.CreatedDate
                        </td>
                        <td>
                            <button class="btn btn-danger" data-id="@item.StudentEmail">@Html.ActionLink("StduentDetails", "StudentDetails", new { classId = item.GroupId, studentId=item.StudentEmail })</button>
                        </td>
                    </tr>
                }
            </table>
            <p>
                @Html.ActionLink("Back to List", "Index")
            </p>

        </div>
    </section>
