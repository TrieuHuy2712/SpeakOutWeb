@model SpeakOutWeb.Models.UserGroup

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@Styles.Render("~/Content/css")
<article id="webslides" class="vertical">
    <section class="bg-white background " style="background-image:url('@Url.Content("~/Library/images/real-estate-background-images-6.jpg")')">
        <div class="container">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <h4>Tạo nhóm</h4>
                    <hr />
                    <input type="hidden" value="@ViewBag.GetUserTrim" id="getAlertTrim" />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-2">Tên nhóm</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.GroupName, new { htmlAttributes = new { @class = "form-control", required = "required", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.GroupName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">Mô tả</label>
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control", required = "required", autocomplete = "off" } })
                            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Tạo" class="btn btn-default" />
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Trở lại danh sách nhóm", "Index", new { @class = "btn btn-info" })
            </div>
        </div>
    </section>
</article>

@section Script1 {
    <script>
        $(function () {
            if ($('#getAlertTrim').val() == "Ok") {
                alert('Tên nhóm hoặc mô tả không được chứa toàn bộ kí tự khoảng trắng');
            }
        });
    </script>

}